<!DOCTYPE html>
<html>
  <head>
    <title>Gitfab2</title>
    <%= content_for?(:stylesheet) ? yield(:stylesheet) : stylesheet_link_tag("application", media: "all", "data-turbolinks-track" => true) %>
    <%= content_for?(:javascript) ? yield(:javascript) : javascript_include_tag("application", "data-turbolinks-track" => true) %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render "layouts/header" %>
    <%= browserid_js_tag %>
    <%= content_for?(:content) ? yield(:content) : yield %>
    <%= content_for?(:bottom) ? yield(:bottom) : nil %>
    <hr>
    <% if Rails.env.development?  %>
      <%= form_tag "/su" do %>
        <%= select_tag "user_id", options_from_collection_for_select(User.all, :id, :name) %>
        <%= submit_tag "su" %>
        <%= submit_tag "reset" %>
      <% end %>
    <% end %>
  </body>
</html>
