#layouts-setting-links
  #user
    #user-name.name
      == image_tag current_user.avatar.thumb, class: "avatar"
      p
        == current_user.name
    ul
      li#user-account
        == link_to "Account", [:edit, current_user]
      li#user-groups
        == link_to "Groups", [current_user, :memberships]
  - current_user.groups.each do |group|
    div id="#{group.name}"
      div id="#{group.name}-name" class="name"
        == image_tag group.avatar.thumb, id: "#{group.name}-avatar", class: "avatar"
        p
          == group.name
      ul
        li id="#{group.name}-profile"
          == link_to "Group Profile & Members", [:edit, group]
