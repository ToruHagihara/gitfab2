- opts ||= {}
div class="add-form-wrap"
  = link_to "add #{item.class.name.underscore}", "#", class: "add-btn"
  = form_for [@owner, @recipe, item], remote: true,
      html: {class: "add-form", multipart: true, :"data-type" => :json } do |f|
    - item.class::UPDATABLE_COLUMNS.each do |field|
      - case field
      - when :photo
        = f.file_field field, class: "add-photo"
      - when :way_set_id
        = f.hidden_field field, value: opts[:way_set_id]
      - when :description
        = f.text_area field
      - else
        = f.text_field field
    = f.submit "create"
